@inherits LayoutComponentBase


<div class="page">
    <div class="sidebar" style="background-image:linear-gradient(103deg, rgb(73, 122, 237) 0%, #06b1f4 70%) !important">
        <NavMenu />
    </div>

    <main style="background-color: #F5F7FA;">
        <div class="top-row px-4" style="background-color: white;">
        </div>

        <article class="content px-4">
            @Body
            <MudThemeProvider />
            <MudPopoverProvider />
            <MudDialogProvider />
            <MudSnackbarProvider />
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
